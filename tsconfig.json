{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".", // This is still the root of your project
    "paths": {
      "@/components/*": [
        "src/components/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/app/page.js", "src/app/layout.js", "src/components/supportInfo.js", "src/components/productInfo.js", "src/components/header.js", "src/components/colorButton.js", "src/components/carousel.js"  ],
  "exclude": [
    "node_modules"
  ]
}
